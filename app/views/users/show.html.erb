<h1 class="text-center"><%= @user.username.capitalize %>'s Profile</h1>

<br>
<p class="text-center">Profile created on: <%= @user.created_at %></p>
<p class="text-center"><%= @user.username.capitalize %> has <%=%> favorites</p>

<% if current_user == @user %>
  <div class="col-md-8 col-md-offset-2">
  <%= link_to "Favorites", users_favorite_path(@user), class:"btn btn-block btn-default" %>
  </div>
<% end %>
